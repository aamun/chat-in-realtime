    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/cover.css')
    script(type='text/javascript',src='/jquery/dist/jquery.min.js')
    script(type='text/javascript',src='/angular/angular.min.js')
    script(type='text/javascript',src='/angular-route/angular-route.min.js')
