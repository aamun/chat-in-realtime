    script(type='text/javascript',src='/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript',src='/angular-bootstrap/ui-bootstrap.min.js')
    script(type='text/javascript',src='/angular-bootstrap/ui-bootstrap-tpls.min.js')
  body(ng-controller='MainCtrl')
    block content